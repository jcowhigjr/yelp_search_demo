  <footer style="padding-top: 50px;">
    <div class="d-flex justify-content-center">
      <div class="container">
        <div class="text-center row">

        </div>
      </div>
    </div>
  </footer>
<div class="form-group">
    <%= form_for @search do |f| %>
        <div class="row center search-bar">
            <%= f.text_field :query, placeholder: 'Enter a search term (ex. tacos)', required: true %>
        </div>
        <div data-controller="geolocation">
          <%= f.hidden_field :latitude, "data-geolocation-target": 'latitude' %>
          <%= f.hidden_field :longitude,  "data-geolocation-target": 'longitude' %>
        </div>
        <div class="row center" >
        <%# WARNGING: turbo true here results in extra search object creation %>
          <%= f.submit "Search", data: { turbo: false } %>
        </div>
    <% end %>
</div>