<body class="landing-body">
    <div class="container">
        <div class="row center">
            <%= image_tag "jitter_logo.png", class: "responsive-img landing-logo"%>
            <h1 class="white-text">Welcome Back</h1>
        </div>
        <div class="container">
            <%= form_for sessions_path do |f| %>
            <div class="row center user-form">
                <%= f.label :email %>
                <%= f.text_field :email%>
                <%= f.label :password %>
                <%= f.password_field :password%>
            </div>
            <div class="row center">
                <%= f.submit "Log In", class: "btn-large" %>
            </div>
            <% end %>
        </div>
    </div>
</body>
