<%= turbo_frame_tag review do %>

    <div class="row center">
        <span class="page-text"><i class="material-icons">person</i> <%= review.user.name %></span>
    </div>
    <div class="row center">
        <span class="page-text"><%= review.rating_in_stars %></span>
    </div>
    <div class="row center">
        <span class="page-text">"<%= review.content %>"</span>
    </div>
    <% if review.user == current_user %>
        <div class="row center">
            <div class="col s6">
                <%= link_to "Edit this Review", edit_user_review_path(current_user, review),
                    "data-turbo-method": :edit,
                    class: "btn-large"
                %>
            </div>
            <div class="col s6">
                <!-- https://github.com/hotwired/turbo-rails/issues/259 -->
                <%= button_to "Delete", user_review_path(current_user, review), class: "btn-large", method: :delete %>
            </div>
        </div>
    <% end %>

<% end %>

